{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6",
      "DOM"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "@routes/*": [
        "./src/routes/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@views/*": [
        "./src/views/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "exclude": [
    "node_modules"
  ]
}